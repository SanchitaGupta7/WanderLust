<% layout("/layouts/boilerplate") %>
<div class="row mt-4">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" method="POST" novalidate action="/login">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input required id="username" class="form-control" name="username" />
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input required type="password" id="password" class="form-control" name="password" />
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>
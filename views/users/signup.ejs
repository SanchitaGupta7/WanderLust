<% layout("/layouts/boilerplate") %>
<div class="row mt-4">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" method="POST" novalidate action="/signup">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input required id="username" class="form-control" name="username" />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input required type="email" id="email" class="form-control" name="email" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input required type="password" id="password" class="form-control" name="password" />
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>